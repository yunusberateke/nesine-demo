{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "@betsPage/*": ["pages/Bets/*"],
      "@components/*": ["components/*"],
      "@utilities/*": ["utilities/*"],
    },
  },
  "include": [
    "src/**/*"
  ]
}